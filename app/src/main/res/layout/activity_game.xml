<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@drawable/customborders">

        <TextView
            android:id="@+id/nicknameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:fontFamily="cursive"
            android:text="Nick"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/levelText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:fontFamily="cursive"
            android:text="level: 1"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

        <Button
            android:id="@+id/pavelTip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.001"
            android:text="( ͡°͜ʖ ͡°)" />

        <Button
            android:id="@+id/fiftyTip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.001"
            android:text="50/50" />
    </LinearLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="520dp"
        android:background="@color/colorPrimary"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/filmTitleTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/frameView"
            android:layout_alignParentStart="true"
            android:fontFamily="cursive"
            android:text="Фильм Сверху"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/filmTitleBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:fontFamily="cursive"
            android:text="Фильм Внизу"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/filmTitleLeft"
            android:layout_width="match_parent"
            android:layout_height="355dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:fontFamily="cursive"
            android:gravity="bottom"
            android:rotation="90"
            android:text="Фильм Слева"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/filmTitleRight"
            android:layout_width="match_parent"
            android:layout_height="355dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:fontFamily="cursive"
            android:gravity="bottom"
            android:rotation="-90"
            android:text="Фильм Справа"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/frameView"
            android:layout_width="258dp"
            android:layout_height="454dp"
            android:layout_centerInParent="true"
            app:srcCompat="@android:drawable/screen_background_dark_transparent" />
    </RelativeLayout>

</LinearLayout>